generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Barbershop {
  id          String   @id @default(uuid())
  name        String
  address     String
  description String
  imageUrl    String
  phones      String[]

  services BarbershopService[]
}

model BarbershopService {
  id           String @id @default(uuid())
  name         String
  description  String
  imageUrl     String
  priceInCents Int

  barberShopId String
  barberShop   Barbershop @relation(fields: [barberShopId], references: [id], onDelete: Cascade)
}
